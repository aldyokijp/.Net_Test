@model IEnumerable<CRUDTestApp.Models.Item>

@{
    ViewData["Title"] = "Item List";
}

<div class="container mt-4">
    <h2 class="mb-3">Item List</h2>

    <!-- Responsive Table -->
    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.CreatedAt.ToShortDateString()</td>
                            <td>
                                <a class="btn btn-warning btn-sm me-2" href="@Url.Action("Edit", new { id = item.Id })">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.Id })"
                                   onclick="return confirm('Are you sure you want to delete this item?');">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No items available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Add New Item Button -->
    <a class="btn btn-primary mt-3" href="@Url.Action("Create")">
        <i class="fas fa-plus"></i> Add New Item
    </a>
</div>
